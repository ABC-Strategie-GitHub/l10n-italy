<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_picking_form_ddt_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.ddt.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="arch" type="xml">
                <field name="move_type" position="after">
                    <field name="goods_description_id"/>
                    <field name="transportation_reason_id"/>
                    <field name="carriage_condition_id"/>
		    <field name="packages_no"/>
                </field>
            </field>
		</record>

	<!--
	Sequences types for outgoing products
	-->
        <record id="seq_type_out_picking" model="ir.sequence.type">
            <field name="name">DDT-OUT</field>
            <field name="code">stock.picking_out</field>
        </record>
        <!--
	Sequences for outgoing products
	-->
        <record id="seq_out_picking" model="ir.sequence">
            <field name="name">DDT-OUT</field>
            <field name="code">stock.picking_out</field>
            <field eval="3" name="padding"/>
            <field name="prefix">%(year)s/</field>
        </record>

	<!--
	Sequences types for incoming products
	-->
        <record id="seq_type_in_picking" model="ir.sequence.type">
            <field name="name">DDT-IN</field>
            <field name="code">stock.picking_in</field>
        </record>
        <!--
	Sequences for incoming products
	-->
        <record id="seq_in_picking" model="ir.sequence">
            <field name="name">DDT-IN</field>
            <field name="code">stock.picking_in</field>
            <field eval="3" name="padding"/>
            <field name="prefix">%(year)s/</field>
        </record>

	<!--
	Sequences types for internal moves
	-->
        <record id="seq_type_int_picking" model="ir.sequence.type">
            <field name="name">DDT-INT</field>
            <field name="code">stock.picking_internal</field>
        </record>
        <!--
	Sequences for internal moves
	-->
        <record id="seq_int_picking" model="ir.sequence">
            <field name="name">DDT-INT</field>
            <field name="code">stock.picking_internal</field>
            <field eval="3" name="padding"/>
            <field name="prefix">%(year)s/</field>
        </record>

    </data>
</openerp>
